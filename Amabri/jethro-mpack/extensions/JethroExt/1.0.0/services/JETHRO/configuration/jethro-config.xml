<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>jethromng_port</name>
        <value>9100</value>
        <description>Jethro Manager port</description>
        <value-attributes>
            <type>int</type>
        </value-attributes>
        <display-name>Jethro manager port</display-name>
    </property>
    <property>
        <name>jethromng_rpm_name</name>
        <value>jethromng-1.3.0-57p_cn6.x86_64.rpm</value>
        <description>Jethro Manager RPM</description>
        <value-attributes>
            <type>string</type>
        </value-attributes>
        <display-name>Jethro manager RPM</display-name>
    </property>
    <property>
        <name>jethro_rpm_name</name>
        <value>jethro-3.0.5-16389.x86_64.rpm</value>
        <description>Jethro RPM</description>
        <value-attributes>
            <type>string</type>
        </value-attributes>
        <display-name>Jethro RPM</display-name>
    </property>
    <property>
        <name>jethro_user</name>
        <value>jethro</value>
        <description>Jethro User Name</description>
        <value-attributes>
            <type>string</type>
        </value-attributes>
        <display-name>Jethro User Name</display-name>
    </property>

    <property>
        <name>jethro_pid_dir</name>
        <value>/var/run/jethro</value>
        <description>Jethro PID directory</description>
        <value-attributes>
            <type>directory</type>
        </value-attributes>
        <display-name>Jethro Server PID directory</display-name>
    </property>

    <property>
        <name>jethromng_pid_file</name>
        <value>/opt/jethro/jethromng/pm2/pids/JethroManager-0.pid</value>
        <description>Jethro PID directory</description>
        <value-attributes>
            <type>file</type>
        </value-attributes>
        <display-name>Jethro Manager PID file</display-name>
    </property>

    <property require-input="true">
        <name>jethro_instance_name</name>
        <value></value>
        <description>Jethro Server instance name</description>
        <value-attributes>
            <type>string</type>
        </value-attributes>
        <display-name>Jethro Manager Instance Name</display-name>
    </property>

    <property require-input="true">
        <name>jethro_instance_storage_path</name>
        <value></value>
        <description>Jethro Server instance storge path</description>
        <value-attributes>
            <type>string</type>
        </value-attributes>
        <display-name>Jethro Manager Instance Storage</display-name>
    </property>

</configuration>
